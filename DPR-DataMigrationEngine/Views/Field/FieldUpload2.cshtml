
@{

    if (ViewBag.ErrorCode < 0)
    {
        <label style="font-weight: normal; color: red;">@ViewBag.ErrorMessage </label>
        
    }
    
     if (ViewBag.ErrorCode > 0)
    {
        <label style="font-weight: normal; color: green;">@ViewBag.ErrorMessage </label>
        
    }
}


