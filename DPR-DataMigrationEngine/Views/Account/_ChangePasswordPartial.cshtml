@using Microsoft.AspNet.Identity
@model DPR_DataMigrationEngine.Models.ManageUserViewModel

@*<p>You're logged in as <strong>@User.Identity.GetUserName()</strong>.</p>*@

@using (Html.BeginForm("Manage", "Account", FormMethod.Post, new { @class = "fsRegister", @style = "width: 40%", role = "form" }))
{
    @Html.AntiForgeryToken()
    <legend class="customlegend22"> Manage your Account password</legend>

    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.OldPassword, new { @style = "padding-left:2%" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @style = "padding-left:2%; padding-right:2%; width:96%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.NewPassword, new { @style = "padding-left:2%" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @style = "padding-left:2%; padding-right:2%; width:96%" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @style = "padding-left:2%" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", @style = "padding-left:2%; padding-right:2%; width:96%" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <table style="width: 100%">
                <tr>
                    <td style="width: 90%">
                        <input type="submit" value="OK" class="btn btnSave large" style="width: 20%; float: right" />
                    </td>
                    <td style="width: 10%" id="dtCanc">
                        <a class="btn btnLogin large" id="ancCancel" style="width: 100%; float: right" href="/Home/Index">Cancel</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}

