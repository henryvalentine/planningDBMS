                    @{
                        var equipmentExtensions = new ExtensionHelpers().ListOption(Model.Equipments, "EquipmentId", "Name", "-- Select Equipment --");

                        foreach (var equipment in equipmentExtensions.Select(equipmentString => Html.Raw(equipmentString)))
                        {
                            @equipment
